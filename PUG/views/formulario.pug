doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Productos PUG
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        a(href="https://www.favicon-generator.org/")
        script(src="https://kit.fontawesome.com/d1ce868220.js" crossorigin="anonymous") 
    body(class="bg-secondary")
        header
            nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
                div(class="container-fluid")
                    div(class="collapse navbar-collapse" id="navbarSupportedContent")
                        ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                            li(class="nav-item")
                                a(class="nav-link active" aria-current="page" href="/") Formulario de productos
                            li(class="nav-item")
                                a(class="nav-link active" href="/products") Lista de productos
                        form(class="d-flex")
                            input(class="form-control me-2" type="search" placeholder="Search" aria-label="Search")
                            button(class="btn btn-outline-success" type="submit") Search
        main
            div(class="container-fluid")
                div(class="container")
                    div(class="contact__title")
                        h1(class="text-center mt-4 p-3 text-white") Formulario de productos
                        hr(class="mb-4")
                    div(class="row ")
                        div(class="col-md-6 shadow rounded p-4 mb-4 bg-light")
                            p Agregue un nuevo producto:
                            form(action="/products" method="POST")
                                div(class="contact__name")
                                    div(class="col mb-3 p-md-2")
                                        label(class="form-label") Nombre
                                        input(type="text" name="nombre" class="form-control" placeholder="Ej: Esmalte Top Coat")
                                div(class="mb-3")
                                    label(class="form-label") Precio
                                    input(type="number" name="precio" class="form-control" placeholder="Ej: 1200") 
                                div(class="mb-3")
                                    label(class="form-label") Marca
                                    input(type="text" name="marca" class="form-control" placeholder="Ej: Semilla")
                                input(class="btn btn-primary" type="submit" value="Enviar")
                                input(class="btn btn-primary" type="reset" value="Limpiar")

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 
                