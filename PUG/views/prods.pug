doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Productos PUG
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        a(href="https://www.favicon-generator.org/")
        script(src="https://kit.fontawesome.com/d1ce868220.js" crossorigin="anonymous") 
    body(class="bg-secondary")
        header
            nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
                div(class="container-fluid")
                    div(class="collapse navbar-collapse" id="navbarSupportedContent")
                        ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                            li(class="nav-item")
                                a(class="nav-link active" aria-current="page" href="/") Formulario de productos
                            li(class="nav-item")
                                a(class="nav-link active" href="/products") Lista de productos
                        form(class="d-flex")
                            input(class="form-control me-2" type="search" placeholder="Search" aria-label="Search")
                            button(class="btn btn-outline-success" type="submit") Search
        main
            div(style="width:100%; max-width:600px; margin: 20px auto;")
                div
                    h2(style="color: white;") Lista de productos
                    if products.length>0
                        table(class="table table-striped table-dark table-hover")
                            thead
                                tr
                                    th(scope="col")='ID'
                                    th(scope="col")='Nombre'
                                    th(scope="col")='Precio'
                                    th(scope="col")='Marca'
                            tbody
                                for product of products
                                    tr
                                        th=product.id
                                        th=product.nombre
                                        th='$' + product.precio
                                        th=product.marca
                    else
                        p(class="alert alert-danger") No hay productos en la lista
            br
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
